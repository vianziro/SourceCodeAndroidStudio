<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ClientActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/toolbar"
                layout="@layout/layout_toolbar" />

            <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/client"
                android:id="@+id/imageView2"
                android:layout_height="200dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Client"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="10dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow>
                    <TextView android:text="No"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="Perusahaan"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="Alamat"
                        android:paddingLeft="10dp"/>
                </TableRow>
                <TableRow>
                    <TextView android:text="1"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="PT. Prima Sasana Adi Cipta"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="Kembangan"
                        android:paddingLeft="10dp"/>
                </TableRow>
                <TableRow>
                    <TextView android:text="2"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="PT. Sinergi Plastik"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="Kapuk"
                        android:paddingLeft="10dp"/>
                </TableRow>
                <TableRow>
                    <TextView android:text="3"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="PT. Gerbang Sarana Baja"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="Cakung"
                        android:paddingLeft="10dp"/>
                </TableRow>
                <TableRow>
                    <TextView android:text="4"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="PT. Sarana Steel Engineering"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="Pulo Gadung"
                        android:paddingLeft="10dp"/>
                </TableRow>
                <TableRow>
                    <TextView android:text="5"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="PT. Restu Prima Karya"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="BSD"
                        android:paddingLeft="10dp"/>
                </TableRow>
                <TableRow>
                    <TextView android:text="6"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="PT. Daya Perkasa"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="Kerawang"
                        android:paddingLeft="10dp"/>
                </TableRow>
                <TableRow>
                    <TextView android:text="7"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="PT. Midi Utama Indonesia"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="Cileduk"
                        android:paddingLeft="10dp"/>
                </TableRow>
                <TableRow>
                    <TextView android:text="8"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="PT. Sari Daya Plasindo"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="Wisma SSK"
                        android:paddingLeft="10dp"/>
                </TableRow>
                <TableRow>
                    <TextView android:text="9"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="PT. Gajah Tunggal"
                        android:paddingLeft="10dp"/>
                    <TextView android:text="Jatake"
                        android:paddingLeft="10dp"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/item_navigasi" />
</android.support.v4.widget.DrawerLayout>